<h1>Sign Up</h1>
<p>Find me in app/views/users/new.html.erb</p>

<%= form_for(@user) do |f| %>
	<div id="register">
		<div><%= f.label :name %> <br> <%= f.text_field :name %> </div>
		<div><%= f.label :email %> <br> <%= f.text_field :email %> </div>
		<div><%= f.label :password %> <br> <%= f.password_field :password %> </div>
		<div><%= f.label :password_confirmation, "Confirm password" %> <br> <%= f.password_field :password_confirmation %> </div>
		<div><br><%= f.submit "Sign Up" %></div>
	</div>
<% end %>
