<div class = "micropost">
	<% if request.path == root_path || request.path == home_path %><!-- if profile page, don't show gravatar-->
		<div id="gravatarComment"> <%= link_to gravatar_for(micropost.user), micropost.user %> </div>
		<div id="usernameComment"><%= link_to micropost.user.name, micropost.user %></div>
	<% end %>
	<div class="content"><%= micropost.content %></div>

	<div id = "actionBar">
		
		<%# # alternate syntax (troubleshooting Lesson68 @59:00)
		<%# <% user = micropost.user rescue User.find(micropost.user_id) %>
		<%# <% if current_user?(user) %>
		
		<!-- if current_user's posts, show delete link -->
		<% if current_user?(micropost.user) %> <!-- To fix >> doesn't work consistently via direct url -->
		<div id="deletePost"><%= link_to "delete", micropost, :method => :delete,
															  :confirm => "Are you sure?"
															  #:title => micropost.content #shows content on mouseover
		%></div>
		<% end %>
		<div class="timestamp"><%= time_ago_in_words(micropost.created_at) %> ago</div>
	</div>
</div>