<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<%= favicon_link_tag 'favicon.ico' %>
	<%= csrf_meta_tag %>
	<%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
	<%= stylesheet_link_tag 'custom', :media => 'screen' %>
	<%= javascript_include_tag 'prototype' %>
	<%= javascript_include_tag 'rails' %>

<body>
			
	<nav class="round">
		<ul>
			<li><%= link_to "Home", home_path %></li>
			<li><%= link_to "Help", help_path %></li>			
			<% if signed_in? %>
				<li><%= link_to "Members", users_path %></li>
				<li><%= link_to "My profile", current_user %></li>
				<li><%= link_to "Settings", edit_user_path(current_user) %></li>
				<li><%= link_to "Sign out", signout_path %></li>
			<% else %>
				<li id="signInBtn"><%= link_to "Sign in", signin_path %></li>
			<% end %>		
		</ul>
	</nav>
	
	<section class="round">
		<!--flash success message on signup, Lesson 46 -->
		<% flash.each do |key, value| %>
			<div class ="flash <%= key %>"><%= value %></div>
		<% end %>
		<!--insert respective 'body' content for each page-->
		<%= yield %>
	</section>

	<div class="watermark">
			<%= image_tag("watertribe.gif", :alt =>"Unable to display image", :class => "round")%>
	</div>

	<footer>
		<nav class="round">
		<ul>
			<li><%= link_to "About", about_path %></li>
			<li><%= link_to "Contact", contact_path %></li>
			<li><%= link_to "Blog", '#' %></li>
		</ul>
		</nav>
	</footer>
	

	<div class="debug"><%= debug(params) if Rails.env.development? %></div>

</body>
</html>